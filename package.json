{
  "name": "gardr-validator-web",
  "version": "0.1.0",
  "description": "The Web ui for the garðr validator",
  "main": "server.js",
  "scripts": {
    "build-browser-js": "sh ./scripts/build-browser-js.sh && sh ./scripts/build-gardr-resources.sh",
    "watch-js": "sh ./scripts/watch-browser-js.sh",
    "build": "./node_modules/.bin/bower install && npm run build-browser-js",
    "start": "npm run build && node server.js",
    "start-dev": "npm run watch-js & sleep 3 && NODE_ENV=local ./node_modules/.bin/nodemon",
    "test": "./node_modules/.bin/mocha test/**/*.test.js --reporter list"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gardr/validator-web.git"
  },
  "author": {
    "name": "Sveinung Røsaker",
    "email": "sveinung.rosaker@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gardr/validator-web/issues"
  },
  "dependencies": {
    "gardr": "0.6.0-SNAPSHOT",
    "gardr-validator": "0.1.1",
    "hapi": "~2.1.2",
    "hoek": "~1.4.1",
    "request": "~2.31.0",
    "handlebars": "~1.3.0",
    "browserify": "~3.19.1",
    "domready": "~0.2.13",
    "dom-events": "~0.1.1",
    "concat-stream": "~1.4.1",
    "moment": "~2.5.0",
    "async": "~0.2.9",
    "winston": "~0.7.2",
    "mkdirp": "~0.3.5",
    "bower": "~1.2.7",
    "brace": "~0.1.3",
    "clean-css": "~2.0.6",
    "htmlparser-to-html": "0.0.5",
    "htmlparser2": "~3.4.0",
    "soupselect": "~0.2.0",
    "convict": "~0.4.1",
    "css-parse": "~1.7.0",
    "uglify-js": "~2.4.8",
    "estraverse": "~1.5.0",
    "esprima": "~1.0.4",
    "unzip": "~0.1.9",
    "lodash": "~2.4.1"
  },
  "devDependencies": {
    "proxyquire": "~0.5.2",
    "mocha": "~1.16.2",
    "watchify": "~0.5.0",
    "referee": "~1.0.2",
    "nodemon": "~1.0.8"
  }
}
